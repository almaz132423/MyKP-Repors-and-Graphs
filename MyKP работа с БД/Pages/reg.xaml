<Page x:Class="MyKP_работа_с_БД.Pages.reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyKP_работа_с_БД.Pages"
      mc:Ignorable="d" 
            Height="auto" Width="300">

    <Grid>
        <StackPanel VerticalAlignment="Center" AutomationProperties.IsOffscreenBehavior="Offscreen">
            <StackPanel Margin="15" >
                <TextBlock Text="Введите имя (Логин)"/>
                <TextBox Name="tbLogin"/>
            </StackPanel>
            <StackPanel Margin="15" >
                <TextBlock Text="Введите Эмейл"/>
                <TextBox Name="tbEmail"/>
            </StackPanel>
            <StackPanel Margin="15" >
                <TextBlock Text="Введите пароль"/>
                <PasswordBox Name="tbPassword"/>
            </StackPanel>
            <StackPanel Margin="15" >
                <TextBlock Text="Повторите пароль"/>
                <PasswordBox Name="tbPassword2"/>
            </StackPanel>
            <Button Content="Зарегистрироваться"
                    Click="btnRegistration_Click"/>
        </StackPanel>
    </Grid>
</Page>
