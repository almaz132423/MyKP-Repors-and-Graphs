<Window x:Class="MyKP_работа_с_БД.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyKP_работа_с_БД"
        mc:Ignorable="d"
                Title="Главное окно" MinHeight="450" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" >
            <TextBlock Text="Приложения для ..." Width="auto"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>
            <Button Content="Назад" Margin="5" Width="150"
                    HorizontalAlignment="Right" 
                    Click="btnGoBack_Click"/>
        </Grid>

        <Frame x:Name="MainFrame" Grid.Row="1" 
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
